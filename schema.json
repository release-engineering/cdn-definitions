{
    "$id": "http://release-engineering.github.io/cdn-definitions/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "absolute_path": {
            "pattern": "^/",
            "type": "string"
        },
        "arch": {
            "type": "string"
        },
        "arch_list": {
            "items": {
                "$ref": "#/definitions/arch"
            },
            "type": "array",
            "uniqueItems": true
        },
        "beta_and_ga_keys_mapping": {
            "additionalProperties": false,
            "properties": {
                "beta_keys": {
                    "$ref": "#/definitions/signing_key_list"
                },
                "ga_keys": {
                    "$ref": "#/definitions/signing_key_list"
                }
            },
            "required": [
                "ga_keys"
            ],
            "type": "object"
        },
        "cfme_version_mappings_list": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/major_or_release_version"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/major_or_release_version"
            },
            "type": "object"
        },
        "content_set_label": {
            "pattern": "^[A-Za-z0-9_\\-]{1,200}$",
            "type": "string"
        },
        "content_set_to_release_version_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/release_version"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/content_set_label"
            },
            "type": "object"
        },
        "current_latest_rhel_versions": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "anyOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/release_version"
                        }
                    ]
                }
            },
            "propertyNames": {
                "pattern": "^(current|latest)\\_rhel[0-9]+\\_(beta|dist)$",
                "type": "string"
            },
            "type": "object"
        },
        "directory_layout": {
            "additionalProperties": false,
            "properties": {
                "arch": {
                    "$ref": "#/definitions/arch"
                },
                "layered_product": {
                    "type": "string"
                },
                "layered_product_version": {
                    "type": "string"
                },
                "major_version": {
                    "$ref": "#/definitions/major_version_string"
                },
                "minor_version": {
                    "$ref": "#/definitions/major_version_string"
                },
                "name": {
                    "type": "string"
                },
                "pattern": {
                    "type": "string"
                },
                "platform": {
                    "type": "string"
                },
                "product": {
                    "type": "string"
                },
                "repo": {
                    "type": "string"
                },
                "rhelalt": {
                    "type": "boolean"
                },
                "rhui": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string"
                },
                "variant": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "pattern"
            ],
            "type": "object"
        },
        "directory_layouts": {
            "items": {
                "$ref": "#/definitions/directory_layout"
            },
            "type": "array",
            "uniqueItems": true
        },
        "env_to_releasever_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/current_latest_rhel_versions"
                }
            },
            "type": "object"
        },
        "exclude_versions_from_listings": {
            "items": {
                "$ref": "#/definitions/release_version"
            },
            "type": "array",
            "uniqueItems": true
        },
        "iso8601_datetime": {
            "anyOf": [
                {
                    "format": "date"
                },
                {
                    "format": "date-time"
                }
            ],
            "type": "string"
        },
        "major_or_release_version": {
            "pattern": "^[0-9]+(\\.[0-9]+)*$",
            "type": "string"
        },
        "major_to_release_version_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/release_version"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/major_version_string"
            },
            "type": "object"
        },
        "major_version": {
            "type": "integer"
        },
        "major_version_list": {
            "items": {
                "$ref": "#/definitions/major_version"
            },
            "type": "array",
            "uniqueItems": true
        },
        "major_version_string": {
            "pattern": "^[0-9]+$",
            "type": "string"
        },
        "major_version_to_signing_keys_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/beta_and_ga_keys_mapping"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/major_version_string"
            }
        },
        "path_alias": {
            "additionalProperties": false,
            "properties": {
                "dest": {
                    "$ref": "#/definitions/absolute_path"
                },
                "src": {
                    "$ref": "#/definitions/absolute_path"
                }
            },
            "required": [
                "src",
                "dest"
            ],
            "type": "object"
        },
        "path_alias_list": {
            "items": {
                "$ref": "#/definitions/path_alias"
            },
            "type": "array",
            "uniqueItems": true
        },
        "product_id": {
            "pattern": "^[0-9]+$",
            "type": "string"
        },
        "product_id_list": {
            "items": {
                "$ref": "#/definitions/product_id"
            },
            "type": "array",
            "uniqueItems": true
        },
        "release_stream_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/release_version_list"
                }
            },
            "type": "object"
        },
        "release_version": {
            "pattern": "^[0-9]+\\.[0-9]+$",
            "type": "string"
        },
        "release_version_list": {
            "items": {
                "$ref": "#/definitions/release_version"
            },
            "type": "array",
            "uniqueItems": true
        },
        "repo_override": {
            "additionalProperties": false,
            "allOf": [
                {
                    "required": [
                        "key",
                        "value"
                    ]
                },
                {
                    "anyOf": [
                        {
                            "required": [
                                "if_match_id"
                            ]
                        },
                        {
                            "required": [
                                "if_match_path"
                            ]
                        },
                        {
                            "required": [
                                "if_created_before"
                            ]
                        },
                        {
                            "required": [
                                "if_created_after"
                            ]
                        }
                    ]
                }
            ],
            "properties": {
                "if_created_after": {
                    "$ref": "#/definitions/iso8601_datetime"
                },
                "if_created_before": {
                    "$ref": "#/definitions/iso8601_datetime"
                },
                "if_match_id": {
                    "type": "string"
                },
                "if_match_path": {
                    "$ref": "#/definitions/absolute_path"
                },
                "key": {
                    "minLength": 1,
                    "type": "string"
                },
                "value": {
                    "type": [
                        "string",
                        "boolean",
                        "number"
                    ]
                }
            },
            "type": "object"
        },
        "repo_overrides": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "items": {
                        "$ref": "#/definitions/repo_override"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "signing_key": {
            "pattern": "^[A-F0-9]{8}$",
            "type": "string"
        },
        "signing_key_list": {
            "items": {
                "$ref": "#/definitions/signing_key"
            },
            "type": "array",
            "uniqueItems": true
        },
        "signing_keys_mapping": {
            "additionalProperties": false,
            "properties": {
                "default": {
                    "$ref": "#/definitions/beta_and_ga_keys_mapping"
                },
                "layered_product": {
                    "$ref": "#/definitions/string_to_signing_keys_mapping"
                },
                "major_version": {
                    "$ref": "#/definitions/major_version_to_signing_keys_mapping"
                },
                "platform": {
                    "$ref": "#/definitions/string_to_signing_keys_mapping"
                }
            },
            "required": [
                "layered_product",
                "platform",
                "major_version"
            ],
            "type": "object"
        },
        "string_to_signing_keys_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/beta_and_ga_keys_mapping"
                }
            }
        },
        "symlink_exception_list": {
            "items": {
                "$ref": "#/definitions/absolute_path"
            },
            "type": "array",
            "uniqueItems": true
        },
        "tps_variant_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "version_to_arch_list_mapping": {
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/arch_list"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/major_version_string"
            },
            "type": "object"
        }
    },
    "properties": {
        "cfme_version_mappings": {
            "$ref": "#/definitions/cfme_version_mappings_list"
        },
        "directory_layouts": {
            "$ref": "#/definitions/directory_layouts"
        },
        "env_to_releasever_mappings": {
            "$ref": "#/definitions/env_to_releasever_mapping"
        },
        "exclude_from_listings": {
            "$ref": "#/definitions/exclude_versions_from_listings"
        },
        "filter_arches_from_release": {
            "$ref": "#/definitions/version_to_arch_list_mapping"
        },
        "ignore_lp_version_product_ids": {
            "$ref": "#/definitions/product_id_list"
        },
        "origin_alias": {
            "$ref": "#/definitions/path_alias_list"
        },
        "override_final_rhel_release": {
            "$ref": "#/definitions/content_set_to_release_version_mapping"
        },
        "override_initial_rhel_release": {
            "$ref": "#/definitions/major_to_release_version_mapping"
        },
        "populate_ubi_dot_repos": {
            "type": "boolean"
        },
        "release_stream_mappings": {
            "$ref": "#/definitions/release_stream_mapping"
        },
        "releasever_alias": {
            "$ref": "#/definitions/path_alias_list"
        },
        "repo_overrides": {
            "$ref": "#/definitions/repo_overrides"
        },
        "rhel_open_dist": {
            "$ref": "#/definitions/major_version_list"
        },
        "rhui_alias": {
            "$ref": "#/definitions/path_alias_list"
        },
        "rhui_product_id": {
            "$ref": "#/definitions/product_id"
        },
        "signing_keys_mappings": {
            "$ref": "#/definitions/signing_keys_mapping"
        },
        "symlink_exceptions": {
            "$ref": "#/definitions/symlink_exception_list"
        },
        "tps_variant_mappings": {
            "$ref": "#/definitions/tps_variant_mapping"
        },
        "version": {
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
            "type": "string"
        }
    },
    "type": "object"
}